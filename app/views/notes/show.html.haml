.wrapper_with_padding
	#note_show
		%h1.title= @note.title
		%p= simple_format(@note.content)

		.buttons
			= link_to "Volver", notes_path, class: "button"
			= link_to "Editar", edit_note_path(@note), class: "button"
			= link_to "Eliminar", note_path(@note), method: :delete, data: { confirm: "Estas seguro?" }, class: "button"